<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MessagesListView">

        <attr name="sceytUiMessageIncBubbleColor" format="reference" />
        <attr name="sceytUiMessageOutBubbleColor" format="reference" />

        <!-- Drawable of the message sent state indicator -->
        <attr name="sceytUiMessageSentIcon" format="reference" />
        <!-- Drawable of the message read state indicator -->
        <attr name="sceytUiMessageReadIcon" format="reference" />
        <!-- Drawable of the message delivery indicator -->
        <attr name="sceytUiMessageDeliveredIcon" format="reference" />
        <!-- Drawable of the message pending indicator -->
        <attr name="sceytUiMessagePendingIcon" format="reference" />

        <attr name="sceytUiMessageSenderNameTextColor" format="reference" />
        <attr name="sceytUiReplayMessageLineColor" format="reference" />

        <!--Date separator item-->
        <attr name="sceytUiDateSeparatorItemTextColor" format="reference" />
        <attr name="sceytUiDateSeparatorItemBackground" format="reference" />
        <attr name="sceytUiDateSeparatorItemTextFont" format="reference" />
        <attr name="sceytUiDateSeparatorItemTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <attr name="sceytUiSameMessageSenderDistance" format="dimension" />
        <attr name="sceytUiDifferentMessageSenderDistance" format="dimension" />
        <attr name="sceytUiDownScrollerUnreadCountColor" format="reference" />
        <attr name="sceytUiMediaLoaderColor" format="reference" />
        <attr name="sceytUiFileAttachmentIcon" format="reference" />
        <attr name="sceytUiFileAttachmentIconBackgroundColor" format="reference" />


    </declare-styleable>
</resources>