<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sceyt.sceytchatuikit.presentation.uicomponents.mediaview.videoview.CustomVideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icThumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.sceyt.sceytchatuikit.presentation.customviews.SceytCircularProgressView
        android:id="@+id/progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:visibility="gone"
        app:backgroundColor="@color/sceyt_progress_bg_color"
        app:iconSizeInPercent="70"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".16"
        app:minProgress="2"
        app:progressColor="@color/sceyt_color_white"
        app:rotateAnimEnabled="false"
        app:trackColor="@android:color/transparent" />

</androidx.constraintlayout.widget.ConstraintLayout>