<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/sceyt_ic_notification"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        android:text="@string/sceyt_notifications"
        android:textColor="@color/sceyt_color_text_themed"
        android:textSize="16sp"
        android:theme="@style/SceytSwitchStyle" />

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/sceyt_color_input"
        android:visibility="gone"
        tools:visibility="visible" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/autoDeleteMessages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/sceyt_ic_auto_delete_message"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        android:text="@string/auto_delete_messages_off"
        android:textColor="@color/sceyt_color_text_themed"
        android:textSize="16sp"
        android:theme="@style/SceytSwitchStyle"
        android:visibility="gone"
        tools:visibility="visible" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/sceyt_color_input" />

</androidx.appcompat.widget.LinearLayoutCompat>