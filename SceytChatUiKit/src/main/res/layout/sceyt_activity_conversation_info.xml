<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sceyt_color_bg"
    tools:context=".presentation.uicomponents.conversationinfo.ConversationInfoActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:elevation="0dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/sceyt_color_bg"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:scrimAnimationDuration="0"
                app:titleCollapseMode="scale"
                app:toolbarId="@+id/appbar">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="?actionBarSize"
                    app:layout_collapseMode="none"
                    app:layout_constraintTop_toBottomOf="@+id/underline">

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/frame_layout_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout="@layout/sceyt_fragment_info_details" />

                    <View
                        android:id="@+id/divider1"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:background="@color/sceyt_color_input"
                        app:layout_constraintTop_toBottomOf="@+id/frame_layout_info" />

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/frame_layout_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/divider1"
                        tools:layout="@layout/sceyt_fragment_info_description" />

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/frame_layout_specifications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/frame_layout_description"
                        tools:layout="@layout/sceyt_fragment_info_description" />

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/frame_layout_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/frame_layout_specifications"
                        tools:layout="@layout/sceyt_fragment_info_settings" />

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/frame_layout_members_by_role"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/frame_layout_settings"
                        tools:layout="@layout/sceyt_fragment_info_members_by_role" />

                    <FrameLayout
                        android:id="@+id/frame_layout_additional_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/frame_layout_members_by_role" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/activity_goods_details_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="@color/sceyt_color_bg"
                    android:contentInsetStart="0dp"
                    android:contentInsetLeft="0dp"
                    android:contentInsetEnd="0dp"
                    android:contentInsetRight="0dp"
                    app:contentInsetEnd="0dp"
                    app:contentInsetLeft="0dp"
                    app:contentInsetRight="0dp"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_collapseMode="pin"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/icBack"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="12dp"
                            android:background="?selectableItemBackgroundBorderless"
                            android:padding="4dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/sceyt_ic_arrow_back" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layoutToolbar"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="12dp"
                            android:visibility="invisible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/icMore"
                            app:layout_constraintStart_toEndOf="@+id/icBack"
                            app:layout_constraintTop_toTopOf="parent">

                            <com.sceyt.sceytchatuikit.presentation.customviews.SceytAvatarView
                                android:id="@+id/toolbarAvatar"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintDimensionRatio="1:1"
                                app:layout_constraintHeight_percent=".75"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/titleToolbar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="12dp"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="start"
                                android:singleLine="true"
                                android:textColor="@color/sceyt_color_text_themed"
                                android:textSize="16sp"
                                app:layout_constrainedWidth="true"
                                app:layout_constraintBottom_toTopOf="@+id/subTitleToolbar"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0"
                                app:layout_constraintStart_toEndOf="@+id/toolbarAvatar"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_chainStyle="packed"
                                tools:text="Title" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/subTitleToolbar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="12dp"
                                android:ellipsize="marquee"
                                android:freezesText="true"
                                android:gravity="start"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:singleLine="true"
                                android:textColor="@color/sceyt_color_gray_400"
                                android:textSize="13sp"
                                app:layout_constrainedWidth="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0"
                                app:layout_constraintStart_toEndOf="@+id/toolbarAvatar"
                                app:layout_constraintTop_toBottomOf="@+id/titleToolbar"
                                tools:text="78 subscribers" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvToolbarInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="@string/sceyt_info"
                            android:textColor="@color/sceyt_color_text_themed"
                            android:textSize="@dimen/largeTextSize"
                            app:fontFamily="@font/roboto_medium"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0"
                            app:layout_constraintStart_toEndOf="@+id/icBack"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/icEdit"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="12dp"
                            android:background="?selectableItemBackgroundBorderless"
                            android:padding="4dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/icMore"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/sceyt_ic_edit_stroked" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/icMore"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="12dp"
                            android:background="?selectableItemBackgroundBorderless"
                            android:padding="4dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/sceyt_ic_more_24" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <View
                android:id="@+id/view_top"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/sceyt_color_divider" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/sceyt_color_bg"
                app:layout_constraintTop_toTopOf="parent"
                app:tabIndicator="@drawable/sceyt_bg_corners_6"
                app:tabIndicatorAnimationMode="elastic"
                app:tabIndicatorColor="@color/sceyt_color_accent"
                app:tabIndicatorFullWidth="false"
                app:tabIndicatorHeight="2dp"
                app:tabMaxWidth="100dp"
                app:tabMinWidth="100dp"
                app:tabSelectedTextColor="@color/sceyt_color_text_themed"
                app:tabTextAppearance="@style/SceytTabTextAppearance"
                app:tabTextColor="@color/sceyt_color_gray_400" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/sceyt_color_divider" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:saveEnabled="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutDetails" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <FrameLayout
        android:id="@+id/rootFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

