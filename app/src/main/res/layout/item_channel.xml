<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/avatar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent=".15"
        android:layout_marginVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/infoAvatarGuideLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/onlineStatus"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_margin="1dp"
        android:elevation="1dp"
        android:background="@drawable/bg_online"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        app:layout_constraintEnd_toEndOf="@id/avatar" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/infoAvatarGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="76dp" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/infoBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="messageStatus,messageCount" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/channelTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/colorFontDark"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/infoBarrier"
        app:layout_constraintStart_toEndOf="@+id/infoAvatarGuideLine"
        app:layout_constraintTop_toTopOf="@id/avatar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lastMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/colorFontGray"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toStartOf="@id/infoBarrier"
        app:layout_constraintStart_toEndOf="@id/infoAvatarGuideLine"
        app:layout_constraintTop_toBottomOf="@+id/channelTitle" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/colorDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/infoAvatarGuideLine" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/updateDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorFontGray"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/avatar" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/messageStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@id/updateDate"
        app:layout_constraintEnd_toStartOf="@id/updateDate"
        app:layout_constraintTop_toTopOf="@id/updateDate" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/messageCount"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_circle_blue"
        android:paddingHorizontal="6dp"
        android:textColor="@color/colorTextWhite"
        android:textSize="@dimen/_12ssp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateDate" />

</androidx.constraintlayout.widget.ConstraintLayout>