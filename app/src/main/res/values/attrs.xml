<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Avatar">
        <attr name="imageUrl" format="string" />
        <attr name="fullName" format="string" />
        <attr name="isGroup" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ToReplayLineView">
        <attr name="toLeft" format="boolean" />
        <attr name="connectedView" format="reference" />
    </declare-styleable>

    <declare-styleable name="DateStatusView">
        <attr name="statusIcon" format="reference" />
        <attr name="statusIconSize" format="dimension" />
        <attr name="statusIconMargin" format="dimension" />
        <attr name="dateTextSize" format="dimension" />
        <attr name="dateTextColor" format="reference|color" />
        <attr name="dateText" format="string" />
        <attr name="firstStatus" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RoundishImageView">
        <attr name="cornerRadius" format="dimension" />
        <attr name="roundedCorners">
            <flag name="topLeft" value="1" />
            <flag name="topRight" value="2" />
            <flag name="bottomRight" value="4" />
            <flag name="bottomLeft" value="8" />
            <flag name="all" value="15" />
        </attr>
    </declare-styleable>
</resources>