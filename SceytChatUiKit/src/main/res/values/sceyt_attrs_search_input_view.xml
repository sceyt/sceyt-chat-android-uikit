<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SearchChannelInputView">
        <!-- View id-->
        <attr name="android:id" format="reference" />

        <attr name="sceytUiSearchChannelInputBackgroundColor" format="reference|color" />
        <attr name="sceytUiSearchChannelInputCornerRadius" format="dimension" />
        <!-- Border-->
        <attr name="sceytUiSearchChannelInputBorderWidth" format="dimension" />
        <attr name="sceytUiSearchChannelInputBorderColor" format="reference|color" />

        <!--Icons -->
        <attr name="sceytUiSearchChannelInputSearchIcon" format="reference" />
        <attr name="sceytUiSearchChannelInputClearIcon" format="reference" />
        
        <!--Input text style-->
        <attr name="sceytUiSearchChannelInputTextColor" format="reference|color" />
        <attr name="sceytUiSearchChannelInputTextSize" format="dimension" />
        <attr name="sceytUiSearchChannelInputTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="sceytUiSearchChannelInputTextFont" format="reference" />

        <attr name="sceytUiSearchChannelInputHintText" format="string" localization="suggested" />
        <attr name="sceytUiSearchChannelInputHintTextColor" format="reference|color" />
    </declare-styleable>
</resources>