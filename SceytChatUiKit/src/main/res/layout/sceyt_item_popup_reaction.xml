<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="1dp">

    <com.sceyt.chatuikit.presentation.customviews.SceytReactionView
        android:id="@+id/emojiView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackgroundBorderless"
        app:sceytReactionViewEnableStroke="false"
        app:sceytReactionViewInnerPadding="4.5dp"
        app:sceytReactionViewSmileTextSize="25sp"
        app:sceytReactionViewStrokeCornerRadius="30dp"
        tools:sceytReactionViewSmileText="😍" />

</FrameLayout>