<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MessagesListView">

        <attr name="sceytUiMessageIncBubbleColor" format="reference|color" />
        <attr name="sceytUiMessageOutBubbleColor" format="reference|color" />

        <!--Background color reply message -->
        <attr name="sceytUiMessageIncReplyBackgroundColor" format="reference|color" />
        <attr name="sceytUiMessageOutReplBackgroundColor" format="reference|color" />

        <!--Background color of link preview -->
        <attr name="sceytUiMessageIncLinkPreviewBackgroundColor" format="reference|color" />
        <attr name="sceytUiMessageOutLinkPreviewBackgroundColor" format="reference|color" />

        <!-- Drawable of the message pending indicator -->
        <attr name="sceytUiMessagePendingIcon" format="reference" />
        <!-- Drawable of the message sent state indicator -->
        <attr name="sceytUiMessageSentIcon" format="reference" />
        <!-- Drawable of the message received indicator -->
        <attr name="sceytUiMessageReceivedIcon" format="reference" />
        <!-- Drawable of the message displayed state indicator -->
        <attr name="sceytUiMessageDisplayedIcon" format="reference" />

        <attr name="sceytUiMessageBodyTextColor" format="reference|color" />
        <attr name="sceytUiMessageDateTextColor" format="reference|color" />

        <attr name="sceytUiMessageSenderNameTextColor" format="reference|color" />
        <attr name="sceytUiReplyMessageLineColor" format="reference|color" />

        <!--Message edited text-->
        <attr name="sceytUiMessageEditedText" format="reference" />
        <attr name="sceytUiMessageEditedTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <!--Date separator item-->
        <attr name="sceytUiDateSeparatorItemTextColor" format="reference|color" />
        <attr name="sceytUiDateSeparatorItemBackgroundColor" format="reference|color" />
        <attr name="sceytUiDateSeparatorItemTextFont" format="reference" />
        <attr name="sceytUiDateSeparatorItemTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <!--Unread messages separator-->
        <attr name="sceytUiUnreadMessagesSeparatorTextColor" format="reference|color" />
        <attr name="sceytUiUnreadMessagesSeparatorBackgroundColor" format="reference|color" />
        <attr name="sceytUiUnreadMessagesSeparatorTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <attr name="sceytUiEnableScrollDownButton" format="boolean"/>
        <attr name="sceytUiEnableDateSeparator" format="boolean"/>

        <!--Background color -->
        <attr name="sceytUiMessageListBackgroundColor" format="reference|color" />

        <!--Empty state-->
        <attr name="sceytUiEmptyStateLayout" format="reference" />
        <attr name="sceytUiEmptyStateSelfChannelLayout" format="reference" />

        <!--Loading state-->
        <attr name="sceytUiLoadingStateLayout" format="reference" />

        <attr name="sceytUiAutoLinkTextColor" format="reference|color" />

        <!--Distance between messages-->
        <attr name="sceytUiSameSenderMessageDistance" format="dimension" />
        <attr name="sceytUiDifferentSenderMessageDistance" format="dimension" />

        <attr name="sceytUiDownScrollerUnreadCountColor" format="reference|color" />
        <attr name="sceytUiDownScrollerIcon" format="reference" />

        <attr name="sceytUiMediaLoaderColor" format="reference|color" />
        <attr name="sceytUiVideoDurationIcon" format="reference" />

        <attr name="sceytUiSwipeReplyIcon" format="reference" />

    </declare-styleable>
</resources>