<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sceyt_color_primary</item>
        <item name="colorPrimaryDark">@color/sceyt_color_primary_dark</item>
        <item name="colorAccent">@color/sceyt_color_accent</item>
        <item name="colorSecondary">@color/sceyt_color_primary</item>
        <item name="colorControlNormal">@color/sceyt_color_primary</item>
        <item name="bottomSheetDialogTheme">@style/SceytAppBottomSheetDialogTheme</item>
        <item name="windowActionModeOverlay">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@color/sceyt_color_status_bar</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DefaultFontTheme" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="SceytAppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/SceytAppModalStyle</item>
    </style>

    <style name="SceytAppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/sceyt_bg_bottom_sheet_dialog</item>
    </style>

    <style name="SceytShapeAppearanceOverlay.CornerSize18" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>

    <style name="SceytShapeAppearanceOverlay.CornerSize5" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

    <style name="SceytPopupMenuStyle" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="popupMenuBackground">@drawable/sceyt_bg_popup</item>
        <item name="android:textColor">@color/sceyt_color_text_themed</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
        <item name="android:scrollbarSize">0dp</item>
        <item name="android:layoutAnimation">@anim/sceyt_layout_animation_fall_down</item>
    </style>

    <style name="SceytDialogNoTitle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@drawable/sceyt_bg_dialog</item>
    </style>

    <style name="SceytDialogWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/sceyt_anim_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/sceyt_anim_dialog_exit</item>
    </style>
</resources>