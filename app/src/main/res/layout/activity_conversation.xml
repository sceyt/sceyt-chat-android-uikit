<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_final"
        tools:context=".presentation.uicomponents.conversation.ConversationActivity">

        <com.sceyt.chat.ui.presentation.uicomponents.conversationheader.ConversationHeaderView
            android:id="@+id/headerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.sceyt.chat.ui.presentation.uicomponents.conversation.MessagesListView
            android:id="@+id/messagesListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/messageInputView"
            app:layout_constraintTop_toBottomOf="@+id/headerView" />

        <View
            android:id="@+id/viewShadow"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/shadow_top"
            app:layout_constraintBottom_toTopOf="@+id/messageInputView" />

        <com.sceyt.chat.ui.presentation.uicomponents.messageinput.MessageInputView
            android:id="@+id/messageInputView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whiteThemed"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>