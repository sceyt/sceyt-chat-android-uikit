<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/sceyt_bg_corners_20"
        android:backgroundTint="@color/sceyt_color_divider"
        app:layout_constraintBottom_toTopOf="@+id/emojiPopupLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".1" />

    <com.emojiview.emojiview.view.AXEmojiPopupLayout
        android:id="@+id/emojiPopupLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:.7" />

</androidx.constraintlayout.widget.ConstraintLayout>