<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ChannelsListView">

        <!--Background color channel list view-->
        <attr name="sceytUiChannelListBackgroundColor" format="reference|color" />
        <attr name="sceytUiChannelListPinnedBackgroundColor" format="reference|color" />
        <!-- A color of the online indicator-->
        <attr name="sceytUiOnlineIndicatorColor" format="reference" />
        <!-- A color of the channels divider-->
        <attr name="sceytUiDividerColor" format="reference" />
        <!-- Show/Hide channels divider-->
        <attr name="sceytUiEnableDivider" format="boolean" />
        <!-- Show channel action as popup-->
        <attr name="sceytUiShowChannelActionAsPopup" format="boolean" />
        <!-- A color of the channel title text color-->
        <attr name="sceytUiChannelTitleTextColor" format="reference" />
        <!-- A color of the last message text color-->
        <attr name="sceytUiLastMessageTextColor" format="reference" />
        <!-- A color of the date text color-->
        <attr name="sceytUiLastMessageDateTextColor" format="reference" />
        <!-- Show message status icon-->
        <attr name="sceytUiStatusIndicatorSize" format="dimension" />
        <!-- Drawable of the message sent state indicator -->
        <attr name="sceytUiIndicatorSentIcon" format="reference" />
        <!-- Drawable of the message read state indicator -->
        <attr name="sceytUiIndicatorReadIcon" format="reference" />
        <!-- Drawable of the file attachment icon -->
        <attr name="sceytUiBodyFileAttachmentIcon" format="reference" />
        <!-- Drawable of the image attachment icon -->
        <attr name="sceytUiBodyImageAttachmentIcon" format="reference" />
        <!-- Drawable of the video attachment icon -->
        <attr name="sceytUiBodyVideoAttachmentIcon" format="reference" />
        <!-- Drawable of the voice attachment icon -->
        <attr name="sceytUiBodyVoiceAttachmentIcon" format="reference" />
        <!-- Drawable of the message delivery indicator -->
        <attr name="sceytUiIndicatorDeliveredIcon" format="reference" />
        <!-- Drawable of the message pending indicator -->
        <attr name="sceytUiIndicatorPendingIcon" format="reference" />
        <!-- A color of the unread message count text -->
        <attr name="sceytUiUnreadMessageCounterTextColor" format="reference" />
        <!-- Background color of the unread message counter -->
        <attr name="sceytUiUnreadMessageCounterBackgroundColor" format="reference" />
        <!-- Drawable of the muted channel icon  -->
        <attr name="sceytUiMutedChannelIcon" format="reference" />
        <!-- Reference to layout resource of the channel list "loading" view -->
        <attr name="sceytUiLoadingView" format="reference" />
        <!-- Reference to layout resource of the channel list empty state view -->
        <attr name="sceytUiEmptyStateView" format="reference" />
        <!-- Reference to layout resource of the channel list empty search state view -->
        <attr name="sceytUiEmptySearchStateView" format="reference" />
        <!-- Reference to channel long click popup style -->
        <attr name="sceytUiPopupStyle" format="reference" />

    </declare-styleable>
</resources>