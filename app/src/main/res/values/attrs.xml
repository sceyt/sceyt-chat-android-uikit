<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Avatar">
        <attr name="avatarImageUrl" format="string" />
        <attr name="avatarFullName" format="string" />
        <attr name="avatarIsGroup" format="boolean" />
        <attr name="avatarTextSize" format="dimension|integer" />
    </declare-styleable>

    <declare-styleable name="ToReplayLineView">
        <attr name="toLeft" format="boolean" />
        <attr name="connectedViewTop" format="reference" />
        <attr name="connectedViewBottom" format="reference" />
    </declare-styleable>

    <declare-styleable name="DateStatusView">
        <attr name="statusIcon" format="reference" />
        <attr name="statusIconSize" format="dimension" />
        <attr name="statusIconMargin" format="dimension" />
        <attr name="dateTextSize" format="dimension" />
        <attr name="dateTextColor" format="reference|color" />
        <attr name="dateText" format="string" />
        <attr name="firstStatus" format="boolean" />
        <attr name="android:paddingStart" format="dimension" />
        <attr name="android:paddingEnd" format="dimension" />
        <attr name="android:paddingBottom" format="dimension" />
        <attr name="android:paddingTop" format="dimension" />
        <attr name="android:padding" format="dimension" />
        <attr name="android:paddingVertical" format="dimension" />
        <attr name="android:paddingHorizontal" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RoundishImageView">
        <attr name="cornerRadius" format="dimension" />
        <attr name="roundedCorners">
            <flag name="topLeft" value="1" />
            <flag name="topRight" value="2" />
            <flag name="bottomRight" value="4" />
            <flag name="bottomLeft" value="8" />
            <flag name="all" value="15" />
        </attr>
    </declare-styleable>
</resources>