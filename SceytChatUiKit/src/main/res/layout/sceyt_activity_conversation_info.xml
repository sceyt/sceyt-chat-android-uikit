<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sceyt_color_bg"
    tools:context=".presentation.uicomponents.conversationinfo.ConversationInfoActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:elevation="0dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/sceyt_color_bg"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:scrimAnimationDuration="0"
                app:titleCollapseMode="scale"
                app:toolbarId="@+id/appbar">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="40dp"
                    app:layout_collapseMode="parallax"
                    app:layout_constraintTop_toBottomOf="@+id/underline">

                    <com.sceyt.sceytchatuikit.presentation.customviews.SceytAvatarView
                        android:id="@+id/avatar"
                        android:layout_width="108dp"
                        android:layout_height="108dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:maxLines="2"
                        android:textColor="@color/sceyt_color_text_themed"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="@+id/avatar"
                        app:layout_constraintStart_toStartOf="@+id/avatar"
                        app:layout_constraintTop_toBottomOf="@+id/avatar"
                        tools:text="@string/sceyt_hint_channel_subject" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvPresenceOrMembers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:textColor="@color/sceyt_color_gray_800"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="@+id/avatar"
                        app:layout_constraintStart_toStartOf="@+id/avatar"
                        app:layout_constraintTop_toBottomOf="@+id/subject"
                        tools:text="78 members" />

                    <FrameLayout
                        android:id="@+id/layout_buttons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvPresenceOrMembers" />

                    <View
                        android:id="@+id/divider1"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/sceyt_color_input"
                        app:layout_constraintTop_toBottomOf="@+id/layout_buttons" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/roboto_medium"
                        android:includeFontPadding="false"
                        android:text="@string/sceyt_description"
                        android:textColor="@color/sceyt_color_gray_800"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider1" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/sceyt_color_text_themed"
                        android:textSize="16sp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                        tools:text="Channel for planning annual meetings" />

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/sceyt_color_input"
                        app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

                    <androidx.constraintlayout.widget.Group
                        android:id="@+id/group_channel_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:constraint_referenced_ids="divider3,tvTitle,tvDescription" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvLink"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layout_marginTop="16dp"
                        android:drawableStart="@drawable/sceyt_ic_channel_link"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        app:layout_constraintEnd_toStartOf="@+id/icQr"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider2"
                        tools:text="sceyt.com/join/tkngt56-VG-DI..." />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/icQr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toBottomOf="@+id/tvLink"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvLink"
                        app:srcCompat="@drawable/sceyt_ic_qr" />

                    <androidx.constraintlayout.widget.Group
                        android:id="@+id/group_channel_link_items"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:constraint_referenced_ids="divider2,tvLink,icQr" />

                    <View
                        android:id="@+id/divider3"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/sceyt_color_input"
                        app:layout_constraintTop_toBottomOf="@+id/tvLink" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/members"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="?selectableItemBackground"
                        android:drawableStart="@drawable/sceyt_ic_members"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="6dp"
                        android:text="@string/sceyt_members"
                        android:textColor="@color/sceyt_color_text_themed"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider3" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/admins"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:background="?selectableItemBackground"
                        android:drawableStart="@drawable/sceyt_ic_admin"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="6dp"
                        android:text="@string/sceyt_admins"
                        android:textColor="@color/sceyt_color_text_themed"
                        android:textSize="16sp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/members" />

                    <View
                        android:id="@+id/divider4"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/sceyt_color_input"
                        app:layout_constraintTop_toBottomOf="@+id/admins" />

                    <androidx.constraintlayout.widget.Group
                        android:id="@+id/group_channel_members"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:constraint_referenced_ids="divider4,members" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/activity_goods_details_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:contentInsetStart="0dp"
                    android:contentInsetLeft="0dp"
                    android:contentInsetEnd="0dp"
                    android:contentInsetRight="0dp"
                    app:contentInsetEnd="0dp"
                    app:contentInsetLeft="0dp"
                    app:contentInsetRight="0dp"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_collapseMode="pin"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/icBack"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="12dp"
                            android:background="?selectableItemBackgroundBorderless"
                            android:padding="4dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/sceyt_ic_arrow_back" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layoutToolbar"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="12dp"
                            android:visibility="invisible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/icEdit"
                            app:layout_constraintStart_toEndOf="@+id/icBack"
                            app:layout_constraintTop_toTopOf="parent">

                            <com.sceyt.sceytchatuikit.presentation.customviews.SceytAvatarView
                                android:id="@+id/toolbarAvatar"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintDimensionRatio="1:1"
                                app:layout_constraintHeight_percent=".75"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/titleToolbar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="12dp"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="start"
                                android:singleLine="true"
                                android:textColor="@color/sceyt_color_text_themed"
                                android:textSize="16sp"
                                app:layout_constrainedWidth="true"
                                app:layout_constraintBottom_toTopOf="@+id/subTitleToolbar"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0"
                                app:layout_constraintStart_toEndOf="@+id/toolbarAvatar"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_chainStyle="packed"
                                tools:text="Title" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/subTitleToolbar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="12dp"
                                android:ellipsize="marquee"
                                android:freezesText="true"
                                android:gravity="start"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:singleLine="true"
                                android:textColor="@color/sceyt_color_gray_400"
                                android:textSize="13sp"
                                app:layout_constrainedWidth="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0"
                                app:layout_constraintStart_toEndOf="@+id/toolbarAvatar"
                                app:layout_constraintTop_toBottomOf="@+id/titleToolbar"
                                tools:text="78 subscribers" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/icEdit"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="12dp"
                            android:background="?selectableItemBackgroundBorderless"
                            android:padding="4dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/sceyt_ic_edit" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <View
                android:id="@+id/view_top"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/sceyt_color_divider" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/sceyt_color_bg"
                app:layout_constraintTop_toTopOf="parent"
                app:tabIndicator="@drawable/sceyt_bg_corners_6"
                app:tabIndicatorAnimationMode="elastic"
                app:tabIndicatorColor="@color/sceyt_color_accent"
                app:tabIndicatorFullWidth="false"
                app:tabIndicatorHeight="2dp"
                app:tabMaxWidth="100dp"
                app:tabMinWidth="100dp"
                app:tabSelectedTextColor="@color/sceyt_color_text_themed"
                app:tabTextAppearance="@style/SceytTabTextAppearance"
                app:tabTextColor="@color/sceyt_color_gray_400" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/sceyt_color_divider" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:overScrollMode="never"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutDetails" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <FrameLayout
        android:id="@+id/rootFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

