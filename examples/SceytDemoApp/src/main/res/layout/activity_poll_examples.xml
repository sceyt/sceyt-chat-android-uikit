<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poll Message Examples"
            android:textColor="@color/sceyt_color_text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Tap any button to send a poll message example"
            android:textColor="@color/sceyt_color_text_secondary"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSimplePoll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Simple Poll"
            android:textAllCaps="false"
            android:textColor="@color/sceyt_color_text_primary"
            app:icon="@drawable/sceyt_ic_notes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAnonymousPoll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Anonymous Poll"
            android:textAllCaps="false"
            android:textColor="@color/sceyt_color_text_primary"
            app:icon="@drawable/sceyt_ic_notes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnSimplePoll" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMultipleChoicePoll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Multiple Choice Poll"
            android:textAllCaps="false"
            android:textColor="@color/sceyt_color_text_primary"
            app:icon="@drawable/sceyt_ic_notes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnAnonymousPoll" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTimedPoll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Timed Poll (7 days)"
            android:textAllCaps="false"
            android:textColor="@color/sceyt_color_text_primary"
            app:icon="@drawable/sceyt_ic_clock"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnMultipleChoicePoll" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAdvancedPoll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Advanced Poll (All Options)"
            android:textAllCaps="false"
            android:textColor="@color/sceyt_color_text_primary"
            app:icon="@drawable/sceyt_ic_notes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnTimedPoll" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnExtensionPoll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Using Extension Function"
            android:textAllCaps="false"
            android:textColor="@color/sceyt_color_text_primary"
            app:icon="@drawable/sceyt_ic_notes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnAdvancedPoll" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnYesNoPoll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Yes/No Poll"
            android:textAllCaps="false"
            android:textColor="@color/sceyt_color_text_primary"
            app:icon="@drawable/sceyt_ic_checkmark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnExtensionPoll" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRatingPoll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Rating Poll (Stars)"
            android:textAllCaps="false"
            android:textColor="@color/sceyt_color_text_primary"
            app:icon="@drawable/sceyt_ic_notes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnYesNoPoll" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="@color/sceyt_color_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnRatingPoll" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Select a button to send a poll"
            android:textColor="@color/sceyt_color_text_secondary"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>

