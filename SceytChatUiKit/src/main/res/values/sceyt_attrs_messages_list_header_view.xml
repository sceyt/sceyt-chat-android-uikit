<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MessagesListHeaderView">
        <!--View id -->
        <attr name="android:id" format="reference" />

        <attr name="sceytUiMessagesListHeaderBackground" format="reference|color" />

        <!--Title text style-->
        <attr name="sceytUiMessagesListHeaderTitleTextColor" format="reference|color" />
        <attr name="sceytUiMessagesListHeaderTitleTextSize" format="dimension" />
        <attr name= "sceytUiMessagesListHeaderTitleTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="sceytUiMessagesListHeaderTitleTextFont" format="reference" />

        <!--SubTitle text style-->
        <attr name="sceytUiMessagesListHeaderSubTitleTextColor" format="reference|color" />
        <attr name="sceytUiMessagesListHeaderSubTitleTextSize" format="dimension" />
        <attr name= "sceytUiMessagesListHeaderSubTitleTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="sceytUiMessagesListHeaderSubTitleTextFont" format="reference" />

        <!-- Avatar style -->
        <attr name="sceytUiMessagesListHeaderAvatarBackgroundColor" format="reference|color" />
        <attr name="sceytUiMessagesListHeaderAvatarTextColor" format="reference|color" />
        <attr name="sceytUiMessagesListHeaderAvatarTextSize" format="dimension" />
        <attr name="sceytUiMessagesListHeaderAvatarTextFont" format="reference" />
        <attr name="sceytUiMessagesListHeaderAvatarTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="sceytUiMessagesListHeaderAvatarShape">
            <flag name="circle" value="0" />
            <flag name="rounded" value="1" />
        </attr>
        <attr name="sceytUiMessagesListHeaderAvatarCornerRadius" format="dimension" />

        <!-- Search input style-->
        <attr name="sceytUiMessagesListHeaderSearchInputBackgroundColor" format="reference|color" />
        <attr name="sceytUiMessagesListHeaderSearchInputCornerRadius" format="dimension" />
        <attr name="sceytUiMessagesListHeaderSearchInputBorderWidth" format="dimension" />
        <attr name="sceytUiMessagesListHeaderSearchInputBorderColor" format="reference|color" />
        <attr name="sceytUiMessagesListHeaderSearchInputSearchIcon" format="reference" />
        <attr name="sceytUiMessagesListHeaderSearchInputClearIcon" format="reference" />
        <attr name="sceytUiMessagesListHeaderSearchInputTextColor" format="reference|color" />
        <attr name="sceytUiMessagesListHeaderSearchInputTextSize" format="dimension" />
        <attr name= "sceytUiMessagesListHeaderSearchInputTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="sceytUiMessagesListHeaderSearchInputTextFont" format="reference" />
        <attr name="sceytUiMessagesListHeaderSearchInputHintText" format="string" localization="suggested" />
        <attr name="sceytUiMessagesListHeaderSearchInputHintTextColor" format="reference|color" />


        <attr name="sceytUiMessagesListHeaderUnderlineColor" format="reference|color" />
        <attr name="sceytUiMessagesListHeaderNavigationIcon" format="reference" />
        <attr name="sceytUiMessagesListHeaderShowUnderline" format="boolean" />

        <!-- Message actions menu -->
        <attr name="sceytUiMessagesListHeaderMessageActionsMenu" format="reference" />
        <attr name="sceytUiMessagesListHeaderMessageActionsMenuOverflowIcon" format="reference" />
        <attr name="sceytUiMessagesListHeaderMessageActionsMenuPopupTheme" format="reference" />
        <attr name="sceytUiMessagesListHeaderMessageActionsMenuTitleAppearance" format="reference" />
    </declare-styleable>
</resources>